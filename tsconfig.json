{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/config": ["./config/index.tsx"],
      "@/context": ["./context/index.tsx"]
    },
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": ["src", "config", "context"],
  "exclude": ["src/app/api", "src/app/layout.tsx", "src/app/page.tsx", "src/app/manifest.ts", "src/app/robots.ts", "src/app/sitemap.ts", "vite.config.ts", "**/*.test.ts", "**/*.test.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
